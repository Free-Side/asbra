/*---
layout: master.hbs
title: ASBRA - 2023 Event Calendar
subtitle: 2023 Event Calendar
description: The Official Website of ASBRA, the USAC Local Association for the state of Hawaii.
activePage: calendar
head: |
  <link href="/style/calendar.css" rel="stylesheet" type="text/css">
  <script src="https://cdn.jsdelivr.net/npm/moment@2.29.3/moment.min.js"></script>
---*/
{{#each sections}}
  <section class="calendar-section">
    <h1>{{section_title}}</h1>
    {{#each events}}
      <section id="{{id}}"
               class="event-details {{#if background}}image-background{{/if}}"
               style="{{#if background}}background-image: url('/images/{{background}}'){{/if}}">
        <div>
          <div class="event-header">
            {{#if logo}}
              <img src="/images/{{logo}}" alt="{{name}} Logo" width="150" height="150" />
            {{/if}}
            <h2>{{#if link}}<a href="{{link}}">{{name}}</a>{{else}}{{name}}{{/if}}</h2>
          </div>
          <ul>
            <li><span class="info-label">Date:</span> {{day}} {{date}}</li>

            {{#if time}}
              <li><span class="info-label">Time:</span> {{time}}</li>
            {{/if}}

            <li><span class="info-label">Location:</span> {{location}} ({{island}})</li>

            {{#if organizer}}
              <li><span class="info-label">Organizer:</span> {{organizer}}</li>
            {{/if}}

            {{#if registration}}
              <li data-event-date="{{date}}" class="hide-past"><a href="{{registration}}">Register Now</a></li>
            {{/if}}
          </ul>
          {{#if description}}
            <p>
              {{{description}}}
            </p>
          {{/if}}
          {{#if flyerLink}}
            <p>
              <a href="{{flyerLink}}">Race Info Flyer ðŸ–¨</a>
            </p>
          {{/if}}
        </div>
      </section>
    {{/each}}
  </section>
{{/each}}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    let timeDependentDisplayElements = document.getElementsByClassName('hide-past');
    const now = moment();
    for (const elem of [...timeDependentDisplayElements]) {
      const eventDate = moment(elem.getAttribute('data-event-date'));
      if (eventDate.isAfter(now)) {
        elem.classList.remove('hide-past');
      }
    }
  });
</script>
